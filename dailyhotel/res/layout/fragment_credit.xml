<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/rl_credit_not_logged_in"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_window_background"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="@string/act_credit_recom"
                android:textColor="@color/textView_textColor_main"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/act_credit_line1"
                android:textColor="@color/textView_textColor_sub"
                android:textSize="15dp" />
            
            <TextView
                android:id="@+id/act_credit_line1_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/act_credit_line1_4"
                android:textColor="@color/textView_textColor_sub"
                android:textSize="15dp"
                android:paddingTop="1dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/act_credit_line2"
                android:textColor="@color/textView_textColor_sub"
                android:textSize="15dp"
                android:paddingTop="1dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/act_credit_line3"
                android:textColor="@color/textView_textColor_sub"
                android:textSize="15dp"
                android:paddingTop="1dp" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/act_credit_line5"
                android:textColor="@color/textView_textColor_sub"
                android:textSize="15dp"
                android:paddingTop="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_no_login_login"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_button_common_background"
                android:text="@string/act_credit_btn_login"
                android:textColor="@android:color/white"
                android:textSize="17dp" />

            <Button
                android:id="@+id/btn_no_login_signup"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_button_common_background"
                android:text="@string/act_credit_sign_up"
                android:textColor="@android:color/white"
                android:textSize="17dp" />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_credit_logged_in"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_section_background"
            android:orientation="horizontal"
            android:paddingBottom="9dp"
            android:paddingLeft="13dp"
            android:paddingTop="20dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/act_credit_view_credit"
                android:textColor="@color/textView_textColor_section"
                android:textSize="12.5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="20dp" >

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/iv_credit_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/img_ic_coin" />

                    <TextView
                        android:id="@+id/tv_credit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:layout_toRightOf="@+id/iv_credit_icon"
                        android:text="@string/act_credit_current_credit"
                        android:textColor="@color/textView_textColor_sub"
                        android:textSize="15dp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_credit_totalss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="right"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_credit_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￦0"
                        android:textColor="@color/textView_textColor_main"
                        android:textSize="16.5dp" />

                    <TextView
                        android:id="@+id/tv_credit_history"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:text="@string/act_credit_history"
                        android:textColor="@color/textView_textColor_sub"
                        android:textSize="13.5dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_section_background"
            android:orientation="horizontal"
            android:paddingBottom="9dp"
            android:paddingLeft="13dp"
            android:paddingTop="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/act_credit_recom_code"
                android:textColor="@color/textView_textColor_section"
                android:textSize="12.5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="20dp" >

                <ImageView
                    android:id="@+id/iv_code_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/img_ic_code" />

                <TextView
                    android:id="@+id/tv_recommender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@+id/iv_code_icon"
                    android:text="@string/act_credit_my_recom_code"
                    android:textColor="@color/textView_textColor_sub"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_credit_recommender_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:text="0000"
                    android:textColor="@color/textView_textColor_main"
                    android:textSize="16.5dp" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:background="@color/common_border" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="10dp" >

            <TextView
                android:id="@+id/tv_credit_recommender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:text="@string/act_credit_line4"
                android:textColor="@color/textView_textColor_sub"
                android:textSize="13.5dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="bottom|center"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/btn_credit_invite_frd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="22.5dp"
                android:background="@drawable/shape_button_kakao_background"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#0000"
                    android:clickable="false"
                    android:src="@drawable/img_ic_kakao" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#0000"
                    android:clickable="false"
                    android:text="@string/act_credit_kakao" />
            </LinearLayout>

            <!-- <Button -->
            <!-- android:id="@+id/btn_credit_invite_frd" -->
            <!-- android:layout_width="match_parent" -->
            <!-- android:layout_height="50dp" -->
            <!-- android:layout_margin="22.5dp" -->
            <!-- android:background="@drawable/shape_button_kakao" -->
            <!-- android:drawableLeft="@drawable/img_ic_kakao" -->
            <!-- android:gravity="center_vertical|center" -->
            <!-- android:text="카카오톡 친구 초대" -->
            <!-- android:textColor="@color/black" -->
            <!-- android:textSize="15dp" /> -->

        </LinearLayout>
    </LinearLayout>

</FrameLayout>