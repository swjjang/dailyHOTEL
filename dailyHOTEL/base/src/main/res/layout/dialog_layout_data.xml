<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:dailyFont="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_fillrect_cbffffff_r2"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="24dp">

        <com.daily.base.widget.DailyTextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center_horizontal"
            android:textColor="@color/default_text_c4d4d4d"
            android:textSize="17dp"
            dailyFont:style="Medium"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/messageTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:textColor="@color/default_text_c4d4d4d"
            android:textSize="13dp"/>

        <com.daily.base.widget.DailyCheckBox
            android:id="@+id/checkBoxView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="-1dp"
            android:textColor="@color/default_text_c4d4d4d"
            android:textSize="13dp"
            android:theme="@style/CheckBoxTheme"
            android:visibility="gone"
            dailyFont:style="Bold"/>

        <RelativeLayout
            android:id="@+id/buttonLayout"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:id="@+id/twoButtonLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/negativeTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_dialog_button_negative"
                    android:gravity="center"
                    android:textColor="@drawable/selector_dialog_button_text_negative"
                    android:textSize="14dp"
                    dailyFont:style="Medium"/>

                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"/>

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/positiveTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_dialog_button_positive"
                    android:gravity="center"
                    android:textColor="@drawable/selector_dialog_button_text_positive"
                    android:textSize="14dp"
                    dailyFont:style="Medium"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/oneButtonLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:visibility="gone">

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/confirmTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_dialog_button_positive"
                    android:gravity="center"
                    android:textColor="@drawable/selector_dialog_button_text_positive"
                    android:textSize="14dp"
                    dailyFont:style="Medium"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</layout>