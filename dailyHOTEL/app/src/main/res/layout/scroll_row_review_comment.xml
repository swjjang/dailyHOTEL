<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <!--<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_marginBottom="15dp"-->
    <!--android:padding="1dp">-->

    <com.daily.base.widget.DailyTextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:drawablePadding="4dp"
        android:text="@string/label_review"
        android:textColor="@color/default_text_c929292"
        android:textSize="12dp"/>

    <com.daily.base.widget.DailyTextView
        android:id="@+id/descriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTextView"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal"
        android:text="@string/message_review_comment_description"
        android:textColor="@color/default_text_c4d4d4d"
        android:textSize="17dp"/>

    <com.daily.base.widget.DailyTextView
        android:id="@+id/commentTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/descriptionTextView"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="14dp"
        android:gravity="top"
        android:hint="@string/message_review_comment_stay_hint"
        android:textColor="@color/default_text_c4d4d4d"
        android:textColorHint="@color/default_text_cd0d0d0"
        android:textSize="13dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/commentTextView"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/default_line_cf0f0f0"/>
    <!--</RelativeLayout>-->
</merge>