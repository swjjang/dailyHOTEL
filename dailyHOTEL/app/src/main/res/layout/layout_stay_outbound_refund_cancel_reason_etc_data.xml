<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <merge
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.daily.base.widget.DailyTextView
            android:id="@+id/cancelReasonEtcView"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:text="@string/label_select_cancel_refund07"
            android:textColor="@drawable/selector_text_color_c323232_ceb2135"
            android:textSize="14dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="15dp">

            <com.daily.base.widget.DailyEditText
                android:id="@+id/messageEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_fillrect_ld0d0d0_bffffff"
                android:gravity="top"
                android:hint="@string/message_enter_contents"
                android:maxLength="300"
                android:paddingBottom="25dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/default_text_c323232"
                android:textColorHint="@color/default_line_cd0d0d0"
                android:textSize="13dp"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/messageCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="7dp"
                android:layout_marginRight="7dp"
                android:text="(0/300ìž)"
                android:textColor="@color/default_text_c929292"
                android:textSize="12dp"/>

            <View
                android:id="@+id/messageClickView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
    </merge>
</layout>

