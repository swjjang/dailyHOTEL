<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:dailyFont="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingTop="19dp">

            <com.daily.base.widget.DailyTextView
                android:id="@+id/gradeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@color/default_background_c929292"
                android:gravity="center"
                android:paddingBottom="1px"
                android:paddingLeft="5.5dp"
                android:paddingRight="5.5dp"
                android:paddingTop="2px"
                android:textColor="@android:color/white"
                android:textSize="11dp"
                android:visibility="invisible"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/nameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="8dp"
                android:freezesText="true"
                android:gravity="center_vertical"
                android:textColor="@color/default_text_c323232"
                android:textSize="18dp"
                dailyFont:style="Medium"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/nameEngTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="2dp"
                android:freezesText="true"
                android:gravity="center_vertical"
                android:textColor="@color/default_text_c323232"
                android:textSize="14dp"
                dailyFont:style="Medium"/>

            <LinearLayout
                android:id="@+id/tripAdvisorLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="7dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/tripAdvisorImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_ic_widget_owl"/>

                <RatingBar
                    android:id="@+id/tripAdvisorRatingBar"
                    style="@style/TripAdvisorRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_marginLeft="2dp"
                    android:numStars="5"
                    android:stepSize="0.5"/>

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/tripAdvisorRatingTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:ellipsize="end"
                    android:freezesText="true"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/default_text_c929292"
                    android:textSize="13dp"/>
            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/view_separate_line_no_linear"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/dateLayout"
                    android:layout_width="0dp"
                    android:layout_height="78dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.daily.base.widget.DailyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_stay_outbound_detail_check_in_out"
                        android:textColor="@color/default_text_c929292"
                        android:textSize="13dp"/>

                    <com.daily.base.widget.DailyTextView
                        android:id="@+id/dateTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:drawablePadding="4dp"
                        android:textColor="@color/default_text_ceb2135"
                        android:textSize="13dp"
                        app:drawableCompatRight="@drawable/navibar_m_burg_ic_v"/>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/default_line_cf0f0f0"/>

                <LinearLayout
                    android:id="@+id/peopleLayout"
                    android:layout_width="0dp"
                    android:layout_height="78dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.daily.base.widget.DailyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_stay_outbound_detail_number_of_people"
                        android:textColor="@color/default_text_c929292"
                        android:textSize="13dp"/>

                    <com.daily.base.widget.DailyTextView
                        android:id="@+id/peopleTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:drawablePadding="4dp"
                        android:textColor="@color/default_text_ceb2135"
                        android:textSize="13dp"
                        app:drawableCompatRight="@drawable/navibar_m_burg_ic_v"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/default_line_cf0f0f0"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/default_background"/>
    </LinearLayout>
</layout>