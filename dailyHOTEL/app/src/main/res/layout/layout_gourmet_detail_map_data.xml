<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <View
            android:id="@+id/mapDividerView"
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:background="@drawable/layerlist_divider"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/mapImageView"
            android:layout_width="0dp"
            android:layout_height="86dp"
            android:adjustViewBounds="true"
            android:scaleType="fitEnd"
            android:src="@drawable/detail_map_img"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mapDividerView"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="66dp"
            android:background="@drawable/detail_map_gradient"
            app:layout_constraintBottom_toBottomOf="@+id/mapImageView"
            app:layout_constraintLeft_toLeftOf="@+id/mapImageView"
            app:layout_constraintRight_toRightOf="@+id/mapImageView"
            app:layout_constraintTop_toTopOf="@+id/mapImageView"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/detailAddressTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="100dp"
            android:freezesText="true"
            android:maxLines="3"
            android:textColor="@color/default_text_c4d4d4d"
            android:textSize="13dp"
            app:layout_constraintBottom_toBottomOf="@+id/mapImageView"
            app:layout_constraintLeft_toLeftOf="@+id/mapImageView"
            app:layout_constraintRight_toRightOf="@+id/mapImageView"
            app:layout_constraintTop_toTopOf="@+id/mapImageView"/>

        <View
            android:id="@+id/mapUnderLine"
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/default_line_cdcdcdd"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mapImageView"/>

        <FrameLayout
            android:id="@+id/copyAddressLayout"
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/navigatorLayout"
            app:layout_constraintTop_toBottomOf="@+id/mapUnderLine">

            <com.daily.base.widget.DailyTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:drawablePadding="4dp"
                android:freezesText="true"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/label_copy_address"
                android:textColor="@color/default_text_c4d4d4d"
                android:textSize="13dp"
                app:drawableCompatLeft="@drawable/detail_ic_copy"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/navigatorLayout"
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/copyAddressLayout"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mapUnderLine">

            <com.daily.base.widget.DailyTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:drawablePadding="4dp"
                android:freezesText="true"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/label_navigator"
                android:textColor="@color/default_text_c4d4d4d"
                android:textSize="13dp"
                app:drawableCompatLeft="@drawable/detail_ic_directions"/>
        </FrameLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:background="@color/default_line_ce8e8e9"
            app:layout_constraintBottom_toBottomOf="@+id/copyAddressLayout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/navigatorLayout"/>
    </android.support.constraint.ConstraintLayout>
</layout>