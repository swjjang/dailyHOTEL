<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/popup_bg_white"
        android:orientation="vertical"
        android:paddingBottom="22dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:adjustViewBounds="true"
                android:src="@drawable/popup_ic_alert_signature"/>

            <com.twoheart.dailyhotel.view.widget.DailyTextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingRight="16dp"
                android:text="@string/frag_rating_hotel_title"
                android:textColor="@color/dialog_title_text"
                android:textSize="17dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <com.twoheart.dailyhotel.view.widget.DailyTextView
            android:id="@+id/periodTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="@string/frag_rating_hotel_text1"
            android:textColor="@color/dialog_message_text"
            android:textSize="13dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="3dp"
            android:gravity="center">

            <com.twoheart.dailyhotel.view.widget.DailyTextView
                android:id="@+id/hotelNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="\&apos;νΈν…”λ…\&apos;"
                android:textColor="@color/dialog_title_text"
                android:textSize="13dp"
                android:textStyle="bold"/>

            <com.twoheart.dailyhotel.view.widget.DailyTextView
                android:id="@+id/messageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/frag_rating_hotel_text3"
                android:textColor="@color/dialog_message_text"
                android:textSize="13dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/twoButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/popup_btn_off">

        <com.twoheart.dailyhotel.view.widget.DailyTextView
            android:id="@+id/positiveTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/frag_rating_hotel_recomm"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="@color/white"/>

        <com.twoheart.dailyhotel.view.widget.DailyTextView
            android:id="@+id/negativeTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/frag_rating_hotel_cancel"
            android:textColor="@color/white"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>