<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="82dp">

    <View
        android:id="@+id/verticalLine"
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:background="@color/default_line_cf0f0f0"/>

    <LinearLayout
        android:id="@+id/stayButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/verticalLine"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.twoheart.dailyhotel.widget.DailyImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginLeft="18dp"
            app:srcCompat="@drawable/ic_home_category_01_hotel"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_home_stay_menu_title"
                android:textColor="@color/default_text_c323232"
                android:textSize="13dp"
                dailyFont:style="Medium"/>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_home_stay_menu_description"
                android:textColor="@color/default_text_c929292"
                android:textSize="12dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gourmetButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/verticalLine"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.twoheart.dailyhotel.widget.DailyImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            app:srcCompat="@drawable/ic_home_category_02_gourmet"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_home_gourmet_menu_title"
                android:textColor="@color/default_text_c323232"
                android:textSize="13dp"
                dailyFont:style="Medium"/>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_home_gourmet_menu_description"
                android:textColor="@color/default_text_c929292"
                android:textSize="12dp"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/default_line_cf0f0f0"/>
</RelativeLayout>