<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:dailyFont="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/emptyLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/emptyImageView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:minHeight="110dp"
            android:scaleType="fitEnd"
            app:srcCompat="@drawable/no_gourmet_ic"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <com.daily.base.widget.DailyTextView
                android:id="@+id/message01TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/message_gourmet_empty_message01"
                android:textColor="@color/default_text_c4d4d4d"
                android:textSize="18dp"
                dailyFont:style="Medium"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/message02TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:gravity="center"
                android:text="@string/message_gourmet_empty_message02"
                android:textColor="@color/default_text_c929292"
                android:textSize="14dp"/>
        </LinearLayout>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/button01TextView"
            android:layout_width="180dp"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_fillrect_beb2135_r3"
            android:gravity="center"
            android:text="@string/label_stay_category_change_region"
            android:textColor="@color/white"
            android:textSize="14dp"
            dailyFont:style="Medium"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/button02TextView"
            android:layout_width="180dp"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_fillrect_beb2135_r3"
            android:gravity="center"
            android:text="@string/label_stay_category_change_date"
            android:textColor="@color/white"
            android:textSize="14dp"
            dailyFont:style="Medium"/>

        <LinearLayout
            android:id="@+id/bottomMessageLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="25dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:minHeight="60dp"
            android:orientation="vertical">

            <com.daily.base.widget.DailyTextView
                android:id="@+id/callUnderTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/label_searchresult_text02"
                android:textColor="@color/default_text_cc5c5c5"
                android:textSize="12dp"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/callTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:gravity="center_horizontal"
                android:paddingBottom="15dp"
                android:text="@string/label_searchresult_call_customercenter"
                android:textColor="@color/default_text_c4d4d4d"
                android:textSize="12dp"/>
        </LinearLayout>
    </LinearLayout>
</layout>