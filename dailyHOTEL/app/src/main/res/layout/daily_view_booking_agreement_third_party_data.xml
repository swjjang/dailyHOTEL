<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <merge
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:parentTag="LinearLayout">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="10dp">

            <com.daily.base.widget.DailyCheckBox
                android:id="@+id/agreeThirdPartyTermsCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:theme="@style/CheckBoxTheme"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/agreeThirdPartyTermsTextView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:text="@string/message_payment_agree_personal_information"
                android:textColor="@color/default_text_c666666"
                android:textSize="13dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/agreeThirdPartyTermsCheckBox"
                app:layout_constraintTop_toTopOf="parent"
                dailyFont:style="Medium"/>

            <ImageView
                android:id="@+id/arrowImageView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:scaleType="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_region_ic_sub_v"/>
        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:id="@+id/thirdPartyTermsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingEnd="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp">

            <com.daily.base.widget.DailyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/message_payment_agree_personal_information00"
                android:textColor="@color/default_text_c4a4a4a"
                android:textSize="12dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="@color/default_line_c979797"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="42dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/default_line_c979797"/>

                <com.daily.base.widget.DailyTextView
                    android:layout_width="96dp"
                    android:layout_height="match_parent"
                    android:background="@color/default_background"
                    android:gravity="center"
                    android:text="@string/label_payment_agree_personal_information02"
                    android:textColor="@color/default_text_c666666"
                    android:textSize="11dp"
                    dailyFont:style="Medium"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/default_line_c979797"/>

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/vendorBusinessNameTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="6dp"
                    android:textColor="@color/default_text_c2c8de6"
                    android:textSize="11dp"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/default_line_c979797"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/default_line_c979797"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="42dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/default_line_c979797"/>

                <com.daily.base.widget.DailyTextView
                    android:layout_width="96dp"
                    android:layout_height="match_parent"
                    android:background="@color/default_background"
                    android:gravity="center"
                    android:text="@string/label_payment_agree_personal_information03"
                    android:textColor="@color/default_text_c666666"
                    android:textSize="11dp"
                    dailyFont:style="Medium"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/default_line_c979797"/>

                <com.daily.base.widget.DailyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="6dp"
                    android:text="@string/message_payment_agree_personal_information03"
                    android:textColor="@color/default_text_c929292"
                    android:textSize="11dp"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/default_line_c979797"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/default_line_c979797"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="42dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/default_line_c979797"/>

                <com.daily.base.widget.DailyTextView
                    android:layout_width="96dp"
                    android:layout_height="match_parent"
                    android:background="@color/default_background"
                    android:gravity="center"
                    android:text="@string/label_payment_agree_personal_information04"
                    android:textColor="@color/default_text_c666666"
                    android:textSize="11dp"
                    dailyFont:style="Medium"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/default_line_c979797"/>

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/personalInformationTextView04"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="6dp"
                    android:text="@string/message_payment_agree_personal_information04"
                    android:textColor="@color/default_text_c929292"
                    android:textSize="11dp"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/default_line_c979797"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/default_line_c979797"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="42dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/default_line_c979797"/>

                <com.daily.base.widget.DailyTextView
                    android:layout_width="96dp"
                    android:layout_height="match_parent"
                    android:background="@color/default_background"
                    android:gravity="center"
                    android:text="@string/label_payment_agree_personal_information05"
                    android:textColor="@color/default_text_c666666"
                    android:textSize="11dp"
                    dailyFont:style="Medium"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/default_line_c979797"/>

                <com.daily.base.widget.DailyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:minHeight="42dp"
                    android:padding="6dp"
                    android:text="@string/message_payment_agree_personal_information05"
                    android:textColor="@color/default_text_c929292"
                    android:textSize="11dp"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/default_line_c979797"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/default_line_c979797"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_payment_notice"/>

                <com.daily.base.widget.DailyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:freezesText="true"
                    android:lineSpacingExtra="-2dp"
                    android:text="@string/message_payment_agree_personal_information06"
                    android:textColor="@color/default_text_c929292"
                    android:textSize="11dp"/>
            </LinearLayout>
        </LinearLayout>
    </merge>
</layout>