<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Generated with http://android-holo-colors.com -->
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/actionbar_background</item>
        <item name="colorPrimaryDark">@color/actionbar_background</item>
        <item name="colorAccent">@color/actionbar_hamburger</item>
        <item name="colorButtonNormal">@color/actionbar_hamburger</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="numberPickerStyle">@style/NPWidget.Holo.Light.NumberPicker</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:progressBarStyleHorizontal">@style/ProgressBarDH_Theme</item>
        <item name="android:listViewStyle">@style/ListViewDH_Theme</item>
        <item name="android:listViewWhiteStyle">@style/ListViewDH_Theme.White</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItemDH_Theme</item>
        <item name="android:windowBackground">@color/default_background</item>
    </style>

    <style name="Theme.AppCompat.Translucent" parent="AppBaseTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="Theme.AppCompat.FullTranslucent" parent="AppBaseTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="Theme.AppCompat.Fullscreen" parent="AppBaseTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.AppCompat.FadeTranslucent" parent="AppBaseTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>"
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="TransDialog" parent="AppBaseTheme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ProgressBarDH_Theme" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>

    <style name="ListViewDH_Theme" parent="android:Widget.ListView">
        <item name="android:listSelector">@android:color/transparent</item>
    </style>

    <style name="ListViewDH_Theme.White" parent="android:Widget.ListView.White">
        <item name="android:listSelector">@android:color/transparent</item>
    </style>

    <style name="SpinnerItemDH_Theme" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="actionbarMenuTextAppearance">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="PlaceTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">13dp</item>
    </style>

    <style name="CategoryTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">13dp</item>
    </style>

    <style name="EditTextTheme">
        <item name="colorControlNormal">@color/default_line_cdcdcdd</item>
        <item name="colorControlActivated">@color/black</item>
    </style>

    <style name="CheckBoxTheme">
        <item name="colorControlNormal">#323232</item>
    </style>

    <style name="CustomSwitch" parent="Theme.AppCompat">
        <item name="colorControlActivated">@android:color/transparent</item>
        <item name="colorSwitchThumbNormal">@android:color/transparent</item>
        <item name="android:colorForeground">@android:color/transparent</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorAccent">@android:color/transparent</item>
        <item name="colorButtonNormal">@android:color/transparent</item>
    </style>

    <style name="TripAdvisorRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/layerlist_tripadvisor_rating_bar</item>
    </style>
</resources>